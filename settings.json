{
  // -------------------------------------- 
  // 
  // --------------------------------------
  "files.autoSave": "onFocusChange",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderWhitespace": "all",
  "editor.linkedEditing": true,
  "editor.lineNumbers": "relative",
  // Không tự động phát hiện indentation từ file, giữ nguyên giá trị tabSize.
  "editor.detectIndentation": false,
  // biểu tượng thu gọn/mở rộng code (> bên lề trái).
  "editor.showFoldingControls": "always",
  // ẨN mini-map
  "editor.minimap.enabled": false,
  // Cho phép sử dụng Ctrl (Windows/Linux) hoặc Cmd (macOS) để thêm nhiều con trỏ (multi-cursor).
  "editor.multiCursorModifier": "ctrlCmd",
  // Đổi con trỏ sang dạng khối (block) thay vì kiểu gạch đứng (line) mặc định.
  "editor.cursorStyle": "line",
  // Tắt Sticky Scroll, không hiển thị tiêu đề function/class khi cuộn code.
  "editor.stickyScroll.enabled": false,
  "editor.guides.indentation": true,
  "editor.wordWrapColumn": 80,

  // ---
  "breadcrumbs.enabled": false,


  // -------------------------------------- 
  // TERMINAL
  // --------------------------------------
  "terminal.integrated.fontFamily": "FiraCode",
  "terminal.integrated.fontSize": 14,

  // Xác định kiểu ký tự kết thúc dòng (End Of Line - EOL) khi lưu file.
  "files.eol": "\n",
  // Tự động xóa khoảng trắng dư thừa ở cuối dòng khi lưu file.
  "files.trimTrailingWhitespace": false,
  // Thêm một dòng trống cuối file khi lưu.
  "files.insertFinalNewline": true,
  

  // -------------------------------------- 
  // ZEN MODE
  // --------------------------------------
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "zenMode.fullScreen": true,


  // -------------------------------------- 
  // WINDOWN 
  // --------------------------------------
  // Tăng mức độ phóng to giao diện lên 300%. Mức mặc định là 0, mỗi +1 tương đương +20%.
  // "window.zoomLevel": 1.0,
  //Ẩn hoàn toàn title bar (thanh tiêu đề cửa sổ).
  "window.customTitleBarVisibility": "never",
  // Kích thước cửa sổ khi mở VSCode
  "window.newWindowDimensions": "fullscreen",

 
  // -------------------------------------- 
  // SIDEBAR
  // --------------------------------------
  // Theme
  "workbench.colorTheme": "React Theme",
  // ---
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",
  // chỉ hiển thị 1 tab duy nhất
  "workbench.editor.showTabs": "single",
  // StatusBar -  thanh dưới cùng
  "workbench.statusBar.visible": true,
  // Khi mở vscode, không hiển thị welcome or any file
  "workbench.startupEditor": "none",
  // Tắt gợi ý mẹo
  "workbench.tips.enabled": false,
  // Chế độ Sticky Scroll trong cây thư mục (tính năng hiển thị dòng tiêu đề ở trên cùng khi cuộn).
  "workbench.tree.enableStickyScroll": false,
  // Hiển thị đường kẻ dọc giúp căn chỉnh cấp bậc thư mục.
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 16,

  // -------------------------------------- 
  // MATERIAL ICON THEME
  // --------------------------------------
  // Ẩn mủi tên xuống
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.files.color": "#42a5f5",


 
  // -------------------------------------- 
  // EXPLORER
  // -------------------------------------- 
  // Tính năng gom nhóm các thư mục con vào một dòng nếu chỉ có một thư mục con duy nhất.
  "explorer.compactFolders": false,
  // Hộp thoại xác nhận khi kéo thả file/thư mục.
  "explorer.confirmDragAndDrop": true,
  // Hộp thoại xác nhận khi xóa file/thư mục.
  "explorer.confirmDelete": false,
  // Hiển thị dấu hiệu (badges) trên file/thư mục (ví dụ: dấu hiệu Git thay đổi, lỗi, v.v.).
  "explorer.decorations.badges": true,
  // Các ký hiệu của Git trong Explorer (ví dụ: chữ “M” màu vàng cho file bị sửa đổi).
  "git.decorations.enabled": true,


  "tailwindCSS.emmetCompletions": true,
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },


  

  // PEACOCK
  // ------ 
  "peacock.affectStatusBar": false, // true | false
  // Khi bật, Peacock sẽ thay đổi màu thanh bên (Sidebar)
  "peacock.affectActivityBar": true, // true | false
  // Định nghĩa danh sách các màu yêu thích để dễ dàng chọn nhanh
  "peacock.favoriteColors": [
    { "name": "Jazzberry Jam", "value": "#AC1754" },
    { "name": "Dark Cerulean", "value": "#205781" },
    { "name": "Persian Blue", "value": "#211C84" },
    { "name": "Tangerine", "value": "#C14600" },
    { "name": "Rich Lavender", "value": "#AA60C8" },
    { "name": "Blue Lagoon", "value": "#0A97B0" },
    { "name": "Dark Gunmetal", "value": "#343131" },
    { "name": "Medium Aquamarine", "value": "#66D2CE" },
  ],

  
  
  
  // VIM
  // -------------------------------
  "vim.easymotion": true, // Bật chế độ di chuyển nhanh
  "vim.surround": true,
  "vim.commentary": true, // Comment code
  "vim.indentObject": true, // Chọn theo khối indentation - vii - vai
  "vim.sneak": true, // Cho phép nhảy nhanh bằng ký tự
  "vim.sneakUseIgnorecaseAndSmartcase": true, // Áp dụng ignorecase và smartcase vào sneak

  "vim.leader": "<Space>",
  "vim.useSystemClipboard": true, // Sử dụng clipboard hệ thống
  "vim.overrideCopy": true, // Dùng `y` để copy vào clipboard hệ thống
  "vim.hlsearch": true, // Highlight kết quả tìm kiếm
  "vim.searchHighlightColor": "#FFBF00",
  "vim.searchHighlightTextColor": "#333333",
  "vim.incsearch": true, // Hiển thị kết quả tìm kiếm khi nhập
  "vim.ignorecase": true, // Không phân biệt chữ hoa/thường khi tìm kiếm
  "vim.smartcase": true, // Phân biệt chữ hoa khi tìm kiếm nếu nhập chữ hoa
  "vim.mouseSelectionGoesIntoVisualMode": true,
  "vim.useCtrlKeys": false,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors": {
    "normal": ["#1F7D53", "#FFFFFF"],           // Xanh lá đậm (Normal Mode)
    "insert": ["#E52020", "#FFFFFF"],           // Xanh dương (Insert Mode)
    "visual": ["#9C27B0", "#FFFFFF"],           // Tím (Visual Mode)
    "visualline": ["#8E24AA", "#FFFFFF"],       // Tím đậm (Visual Line Mode)
    "visualblock": ["#6A1B9A", "#FFFFFF"],      // Tím tối hơn (Visual Block Mode)
    "replace": ["#D84315", "#FFFFFF"],          // Cam đậm (Replace Mode)
    "commandlineinprogress": ["#DC143C", "#FFFFFF"], // Cam sáng (Command Mode)
    "searchinprogressmode": ["#FFBF00", "#333333"],  // Vàng (Search Mode)
    "easymotionmode": ["#0288D1", "#FFFFFF"],   // Xanh biển (EasyMotion)
    "easymotioninputmode": ["#03A9F4", "#FFFFFF"], // Xanh nước biển nhạt (EasyMotion Input)
    "surroundinputmode": ["#009688", "#FFFFFF"] // Xanh lục bảo (Surround Mode)
  },
  "vim.undoHistory": 1000, // Lưu lịch sử undo lên đến 1000 bước
  "vim.undoAfterCursorMove": false, // Không reset undo khi di chuyển con trỏ
  "vim.autoindent": true,
  "vim.showcmd": true,


  "vim.normalModeKeyBindingsNonRecursive": [

    // move
    { "before": ["j"], "after": ["j", "z", "z"] },
    { "before": ["k"], "after": ["k", "z", "z"] },

    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-tab>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    { "before": ["<tab>"], "commands": [":bnext"] },

    // splits - mở cửa sổ editer trái phải
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },

    // Chuyển sang cửa sổ (editor) bên
    { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
    { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
    { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
    { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] },

    // Điều hướng giữa các lỗi (Diagnostics)
    { "before": ["[", "d"], "commands": ["editor.action.marker.prev"] },
    { "before": ["]", "d"], "commands": ["editor.action.marker.prev"] },

    //
    { "before": ["leader", "p"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "f"], "commands": ["actions.find"] },
    { "before": ["leader", "F"], "commands": ["workbench.action.findInFiles"] },
    { "before": ["leader", "f", "f"], "commands": ["workbench.action.findInFiles"] },

    // LSP
    { "before": ["g", "d"], "commands": ["editor.action.revealDefinition"] },
    { "before": ["g", "D"], "commands": ["editor.action.revealDeclaration"] },
    { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] },
    { "before": ["g", "i"], "commands": ["editor.action.goToImplementation"] },
    { "before": ["g", "y"], "commands": ["editor.action.goToTypeDefinition"] },
    { "before": ["g", "K"], "commands": ["editor.action.triggerParameterHints"] },
    { "before": ["K"],  "commands": ["editor.action.showHover"] },

    // Bookmarks - use extension Bookmarks
    { "before": ["<leader>", "b", "m"], "commands": ["bookmarks.toggle"] },
    { "before": ["<leader>", "b", "m", "l"], "commands": ["bookmarks.list" ]},

    //
    { "before": ["leader", "y"], "commands": ["vim.showRegisters"] },
    { "before": ["<leader>", "n"], "commands": [":nohlsearch"] },

  ],
  "vim.visualModeKeyBindings": [

    // block comment /* */
    { "before": ["leader", "c"], "commands": ["editor.action.blockComment"] },

    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },

    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] }, // Di chuyển dòng hiện tại xuống
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<D-s>"],
      "commands": [":w", "<Esc>"]
    },
    {
      "before": ["<C-s>"],
      "commands": [":w", "<Esc>"]
    },
  ],

  "vim.handleKeys": {
    "<C-r>": true, // redu
  },

  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // VSCode Animations:
  // ------------------------------
  // Hiệu ứng animation cho Command Palette
  "animations.Command-Palette": "Slide", // Các giá trị có thể: "None", "Scale", "Slide", "Fade"
  // Hiệu ứng animation cho tab
  "animations.Tabs": "Scale", // Các giá trị có thể: "None", "Scale", "Slide", "Flip"
  // Hiệu ứng animation khi cuộn
  "animations.Scrolling": "None", // Các giá trị có thể: "None", "Scale", "Slide", "Fade"
  // Hiệu ứng animation cho item đang hoạt động
  "animations.Active": "Indent", // Các giá trị có thể: "None", "Scale", "Indent"
  // Hiệu ứng làm mờ khi mất focus
  "animations.CursorAnimation": true,
  "animations.CursorAnimationOptions": {
    "Color": "#333",
    "CursorStyle": "line",
    "TrailLength": 8
  },
  "animations.UseCursorColorForCursorAnimation": true,
  "animations.Focus-Dimming-Amount": 70,
  "animations.Focus-Dimming-Mode": "Full Window",
  "animations.Install-Method": "Custom CSS and JS",
  
  "vscode_custom_css.imports": [
    "file:///Users/_david/vscode-custom/vscode-script.js",
    "file:///Users/_david/vscode-custom/vscode-styles.css",
    "file:///Users/_david/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
  ],
  "workbench.colorCustomizations": {
    "editorGutter.modifiedBackground": "#FFA500",
    "editorGutter.addedBackground": "#00FF00",
    "editorGutter.deletedBackground": "#FF0000",
    "statusBar.background": "#8E24AA",
    "statusBar.noFolderBackground": "#8E24AA",
    "statusBar.debuggingBackground": "#8E24AA",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.debuggingForeground": "#FFFFFF"
  },

  

}
